@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                let isValid = true;

                // Campos a validar
                const fieldsToValidate = [
                    'MetaFecha',
                    'MetaTecnPresencial',
                    'MetaTecnVirtual',
                    'MetaTecPresencial',
                    'MetaTecVirtual',
                    'MetaETPresencial',
                    'MetaETVirtual',
                    'MetaOtros',
                    'MetaTGOApPasan',
                    'MetaTCOApPasan',
                    'MetaETApPasan',
                    'MetaOTROApPasan'
                ];

                fieldsToValidate.forEach(function (field) {
                    const input = $(`#${field}`);
                    if (input.val().trim() === '') {
                        isValid = false;
                        input.addClass('is-invalid');
                    } else {
                        input.removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Por favor, complete todos los campos.');
                }
            });
        });
    </script>
