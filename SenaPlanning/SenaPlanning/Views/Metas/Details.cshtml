@model ClaseModelo.Meta

@{
    ViewBag.Title = "Details";

    double APRENDICES_POR_CURSOS = 30;
    double APRENDICES_POR_CURSOS_OTROS = 35;


    double RESULT_META_TGO_AP_PROG = (long.Parse(Model.MetaTecnPresencial.ToString()) + long.Parse(Model.MetaTecnVirtual.ToString()) - long.Parse(Model.MetaTGOApPasan.ToString()));
    double RESULT_META_TCO_AP_PROG = (long.Parse(Model.MetaTecPresencial.ToString()) + long.Parse(Model.MetaTecVirtual.ToString()) - long.Parse(Model.MetaTCOApPasan.ToString()));
    double RESULT_META_ET_AP_PROG = (long.Parse(Model.MetaETPresencial.ToString()) + long.Parse(Model.MetaETVirtual.ToString()) - long.Parse(Model.MetaETApPasan.ToString()));
    double RESULT_META_OTROS_AP_PROG = (long.Parse(Model.MetaOtros.ToString()) - long.Parse(Model.MetaOTROApPasan.ToString()));

    double CURSO_META_TGO = dividir(RESULT_META_TGO_AP_PROG, APRENDICES_POR_CURSOS);
    double CURSO_META_TCO = dividir(RESULT_META_TCO_AP_PROG, APRENDICES_POR_CURSOS);
    double CURSO_META_ET = dividir(RESULT_META_ET_AP_PROG, APRENDICES_POR_CURSOS_OTROS);
    double CURSO_META_OTROS = dividir(RESULT_META_OTROS_AP_PROG, APRENDICES_POR_CURSOS_OTROS);

    //double META_GENERAL = CURSO_META_TGO + CURSO_META_TCO + CURSO_META_ET + CURSO_META_OTROS;

    double dividir(double dividendo, double divisor)
    {
        if (dividendo < 0) return 0;
        if (divisor < 0) return 0;
        return Math.Round((dividendo / divisor) == 0 ? 0 : (dividendo / divisor));
    }
}

<div class="card-body">

    <div class="content text-center">
        <div class="d-flex">
            <div class="flex-grow-1 mb-1 mb-md-0">
                <h1 class="h3 fw-bold mb-2">
