@model IEnumerable<ClaseModelo.Meta>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Metas</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">Metas</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</div>
<br />

<div class="card-body">
    <div class="block block-rounded">
        <div class="col-sm-12">

            <div class="block-header block-header-default d-flex align-items-center">
                <div class="col-sm-4">
                    <br />
                    <h5>Tabla de Ficha</h5>
                    <br />
                    @using (Html.BeginForm("Index", "UsuariosAprendiz", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-light"><a href="@Url.Action("Create","Metas")">Crear</a></button>
                </div>
            </div>

            <br />

            @foreach (var item in Model)
            {
                double APRENDICES_POR_CURSOS = 30;
                double APRENDICES_POR_CURSOS_OTROS = 35;

                double RESULT_META_TGO_AP_PROG = Math.Round(double.Parse(item.MetaTGOApPasan.ToString()) / (double.Parse(item.MetaTecnPresencial.ToString()) + double.Parse(item.MetaTecnVirtual.ToString())) * 100, 2);
                double RESULT_META_TCO_AP_PROG = Math.Round(double.Parse(item.MetaTCOApPasan.ToString()) / (double.Parse(item.MetaTecPresencial.ToString()) + double.Parse(item.MetaTecVirtual.ToString())) * 100, 2);
                double RESULT_META_ET_AP_PROG = Math.Round(double.Parse(item.MetaETApPasan.ToString()) / (double.Parse(item.MetaETPresencial.ToString()) + double.Parse(item.MetaETVirtual.ToString()) ) * 100, 2);
                double RESULT_META_OTROS_AP_PROG = Math.Round(double.Parse(item.MetaOTROApPasan.ToString()) / (double.Parse(item.MetaOtros.ToString())) * 100, 2);


                double META_GENERAL = Math.Round((RESULT_META_TGO_AP_PROG + RESULT_META_TCO_AP_PROG + RESULT_META_ET_AP_PROG + RESULT_META_OTROS_AP_PROG) / 4, 2);

                <div class="content">
                    <div class="row">
                        <div class="col-md-10">
                            <h4>Meta general vigente del año <a class="fw-semibold"><span>@Html.DisplayFor(modelItem => item.MetaFecha)</span></a></h4>
                            <div class="progress push">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: @META_GENERAL%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    <span class="fs-sm fw-semibold">@META_GENERAL%</span>
                                </div>

                            </div>

                        </div>
                        <div class="col-md-2">
                            <br />
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdMeta }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdMeta }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdMeta })
                        </div>
                    </div>
               </div>
            }
        </div>
    </div>
</div>