@model IEnumerable<ClaseModelo.Instructor>

@{
    ViewBag.Title = "Instructores";
}

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Instructores</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item">Instructor</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">


            </div>
        </div>
    </div>
</div>
<br />
<div class="card-body">
    <div class="block block-rounded">
        <div class="col-sm-12">

            <div class="block-header block-header-default d-flex align-items-center">
                <div class="col-sm-4">
                    <br />
                    <h2  class="content-heading">Tabla de Instructores</h2>
