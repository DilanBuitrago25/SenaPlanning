                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }*@
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-light"><a href="@Url.Action("Create","Instructors")">Crear</a></button>
                </div>
            </div>

            <br />
            <div class="block-content block-content-full">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-vcenter js-dataTable-buttons table-responsive    ">
                        <thead>
                            <tr>
                                <th>Documento</th>
                                <th>Nombre Completo</th>
                                <th>Regional</th>
                                <th>Dependencia</th>
                                <th>Cargo</th>
                                <th>Correo SENA</th>
                                <th>Red de Conocimiento</th>
                                <th>Area de Conocimiento</th>
                                <th style="width: 15%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fs-sm">@Html.DisplayFor(modelItem => item.DocumentoInstructor)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCompletoInstructor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegionalInstructor)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.DependenciaInstructor)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.CargoInstructor)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.CorreoSENAInstructor)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.RedInstructor)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.AreaInstructor)
                                    </th>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.IdInstructor }) |
                                        @Html.ActionLink("Programas", "Programa_Area", new { id = item.IdInstructor }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdInstructor })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
</div>
