@model IEnumerable<ClaseModelo.Area_Conocimiento>

@{
    ViewBag.Title = "Areas";
}


<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Area de Conocimiento</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item">Area</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">


            </div>
        </div>
    </div>
</div>
<br />
<div class="card-body">
    <div class="block block-rounded">
    <div class="col-sm-12">
            <div class="block-header block-header-default d-flex align-items-center">
                <div class="col-sm-4">
                    <h2 class="content-heading">Tabla de Area de Conocimiento</h2>
                    @*@using (Html.BeginForm("Index", "UsuariosAprendiz", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }*@
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-light"><a href="@Url.Action("Create","Area_Conocimiento")">Crear</a></button>
                </div>
            </div>
            <div class="block-content block-content-full">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-vcenter js-dataTable-buttons table-responsive">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Estado</th>
                                <th>Red de Conocimiento</th>
                                <th style="width: 15%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fs-sm">@Html.DisplayFor(modelItem => item.IdRed)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreArea)
                                    </td>
                                    <td>
                                        @if (item.EstadoArea == true)
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">Inactivo</span>
                                        }
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Red_Conocimiento.NombreRed)
                                    </th>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.IdArea }) |
                                        @Html.ActionLink("Programas", "Programa_Area", new { id = item.IdArea }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdArea })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>



